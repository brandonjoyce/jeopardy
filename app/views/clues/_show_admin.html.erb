<div class='container'>
	<div class='row'>
		<div class='col-xs-6'>
			<h3><%= clue.category + ' ' + clue.value.to_s %></h3>
			<p>
				<%= clue.text %>
			</p>
		</div>
		<div class='col-xs-6'>
			<table class='table'>
				<tr>
					<th>Player</th>
					<th>Response</th>
					<% if clue.final? %>
						<th>Wager</th>
					<% end %>
					<th>Score</th>
					<th></th>
				</tr>
				<% clue.answers.each do |answer| %>
					<tr>
						<td><%= answer.user %></td>
						<td><%= answer.response %></td>
						<% if clue.final? %>
							<td><%= answer.wager %></td>
						<% end %>
						<td><%= answer.user_current_score %></td>
            <td>
              <button class="btn_correct" type="button" data-clue="<%= clue.id %>" data-answer="<%= answer.id %>">Correct</button>
            </td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
